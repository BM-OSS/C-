#include <stdio.h>
#define IN 1
#define OUT 0

int count_words();

int main()
{
    int num_words;
    printf("Enter text (with end '@')\n");
    num_words =count_words();
    printf("Number of words: %d\n",num_words);
    return 0;
}

int count_words()
{
    int nw, c, state;
    state =OUT;
    nw = 0;
    while ((c=getchar())!='@')
    {
        if(c==' '||c=='\n'||c=='\t')
        {
            state=OUT;
        }
        else if(state==OUT)
        {
            state=IN;
            nw++;
        }
    } 
    return nw;
} 
