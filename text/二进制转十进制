#include<stdio.h>
#include<string.h>
#include<stdbool.h>

bool is_bin(const char*bin)；
int bin_to_dec(const char*bin)；

bool is_bin(常量字符*bin)
{
if(strlen(bin)==0)
{return false；}
for(int i；i<strlen(bin)；i++)
    {
if(bin[i]！='0'&&bin[i]！='1')
{return false；}
    }
返回true；
}

int bin_to_dec(常量字符*bin)
{
int dec=0；
for(int i=0；i<strlen(bin)；i++)
    {
Dec=dec*2+(bin[i]-'0')；
    }
返回dec；
}

int main()
{
char bin[32]；
int len=strlen(bin)；
printf("请输入一个二进制数(仅含有1和0）")；
scanf("%31s"，&bin)；
if(is_bin(bin)==0)
    {
        printf("不是一个有效的二进制数\n");
        return 1;
    }
    int dec1=bin_to_dec(bin);
    printf("此二进制数所对应的十进制数是：%d",dec1);
    return 0;
}

