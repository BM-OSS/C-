#include <stdio.h>

void str_cat(char *dest,char *src);

int main()
{
    char dest[100]="holle,";
    char src[]="world!";
    printf("连接前dest:%s;src:%s\n",dest,src);
    str_cat(dest,src);
    printf("连接后dest:%s\n",dest);
    return 0;
}

void str_cat(char *dest,char *src)
{
    while(*dest!='\0')
    {
        *dest++;
    }
    while(*src!='\0')
    {
        *dest=*src;
        dest++;
        src++;
    }
    *dest='\0';
}
