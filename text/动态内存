#include <stdio.h>
#include <stdlib.h>

int main ()
{
    int *arr;
    int n = 5;
    arr = (int *)malloc(n * sizeof(int));
    if(arr==NULL)
    {
        printf("内存分配失败\n");
        return 1;
    }
    printf("请输入5个整数:\n");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("\n");
    printf("你输入的整数是:\n");
    for(int i=0;i<n;i++)
    {
        printf("%d ",arr[i]);
    }
    printf("\n");
    free(arr);
    return 0;   
}
