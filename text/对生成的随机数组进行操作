//定义一个含有15个元素的数组，并编写函数完成以下的要求:
//1.调用C语言的库函数用随机函数给所有元素赋值（0-49）；
//2.输出元素数组的值；
//3.按顺序把相连的3个数组相加，并打印出来；
#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define SIZE 15
#define M 3

void rand_a(int *a,int n);
void sum_a(int *a,int *b,int n);
void print(int *b,int n);

int main()
{
    int u[SIZE],v[SIZE/M];
    srand(time(NULL));
    printf("下面是随机生成的数组:\n");
    rand_a(u,SIZE);
    print(u,SIZE);
    sum_a(u,v,SIZE);
    printf("将随机生成的数组每三个相加后如下:\n");
    print(v,SIZE/M);
}

void rand_a(int *a,int n)
{
    for(int i=0;i<n;i++)
    {
        a[i]=rand()%50;
    }
}
void sum_a(int *a,int *b,int n)
{
    int sum=0;
    for(int i=0,j=0;i<n;i++)
    {
        sum+=a[i];
        if((i+1)%3==0)
        {
            b[j]=sum;
            j++;
            sum=0;
        }
    }
}
void print(int *a,int n)
{
    for(int i=0;i<n;i++)
    {
        printf("%5d",a[i]);
        if((i+1)%5==0)
        {
            printf("\n");
        }
    }
}
