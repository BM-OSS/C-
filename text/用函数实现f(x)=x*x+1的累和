#include <stdio.h>

int sum(int a);
int f(int x);

int main()
{
    int a,b;
    printf("please input a :\n");
    scanf("%d",&a);
    b = sum(a);
    printf("a=%d; sum=%d\n",a,b);
    return 0;
}

int sum(int a)
{
    int i,total =0;
    for(int i=0; i<=a; i++)
    {
        total += f(i);
    }
    return total;
}

int f(int x)
{
   int result = x*x+1;
   return result;
}
