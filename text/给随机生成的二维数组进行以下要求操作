//生成一个随机二维数组（5*6）完成以下的操作要求：
//1.将生成的数组打印出来（按照5*6打印）；
//2.计算每一行的平均值并打印在每一行的后面；
#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define M 5
#define N 6
void getrand(int (*ps)[N]);
void getave(int s[M][N],float *a);
void print(int ps[][N],float a[]);
int main()
{
    int x[M][N];
    float y[M];
    srand(time(NULL));
    printf("随机生成的数组和求得每行的平均值为\n");
    getrand(x);
    getave(x,y);
    print(x,y);
    return 0;
}
void getrand(int (*ps)[N])
{
    for(int i=0;i<M;i++)
    {
        for(int j=0;j<N;j++)
        {
            ps[i][j]=rand()%30+10;
        }
    }
}
void getave(int s[M][N],float *a)
{
    for(int i=0;i<M;i++)
    {
        float ave=0.0;
        for(int j=0;j<N;j++)
        {
            ave+=s[i][j];
        }
        a[i]=ave/N;
    }
}
void print(int ps[][N],float a[])
{
    for(int i=0;i<M;i++)
    {
        for(int j=0;j<N;j++)
        {
            printf("%4d",ps[i][j]);
        }
        printf("%6.2f",a[i]);
        printf("\n");
    }
}
