#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define M 9

void rand_a(int *a,int n);
void print(int *a,int n);
void insvert(int *a,int n);

int main()
{
    int x[M];
    srand(time(NULL));
    printf("以下是随机生成的数组:\n");
    rand_a(x,M);
    print(x,M);
    printf("现在是交换后的数组:\n");
    insvert(x,M);
    print(x,M);
}

void rand_a(int *a,int n)
{
    for(int i=0;i<n;i++)
    {
        a[i]=rand()%50;
    }    
}
void print(int *a,int n)
{
    for(int i=0;i<n;i++)
    {
        printf("%4d",a[i]);
        if((i+1)%3==0)
        {
            printf("\n");
        }
    }
}
void insvert(int *a,int n)
{
    int temp;
    for(int i=0,j=n-1;i<j;i++,j--)
    {
        temp=a[i];
        a[i]=a[j];
        a[j]=temp;
    }
}

