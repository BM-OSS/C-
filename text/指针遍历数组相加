#include <stdio.h>

int sum_array(int *arr,int length);

int main()
{
    int sum=0;
    int arr[]={1,2,3,4,5};
    int length=sizeof(arr)/sizeof(arr[0]);
    printf("原数组为:");
    for(int i=0;i<length;i++)
    {
        printf("%d ",arr[i]);
    }
    printf("\n");
    sum=sum_array(arr,length);
    printf("指针遍历后:%d\n",sum);
    return 0;
}

int sum_array(int *arr,int length)
{
    int sum=0;
    int *ptr=arr;
    for(int i=0;i<length;i++)
    {
        sum+=*ptr;
        ptr++;
    }
    return sum;
}
